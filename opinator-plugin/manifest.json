{
	"name" : "Opinator",
	"version" : "1.0.0",
	"manifest_version":2,
	"description" : "Sentiment Analysis of Product Reviews",
	"browser_action" : {
		"name" : "Opinator",
		"default_icon": "icons/images19.png",
		"default_popup": "popup.html"
	},
	"applications": {
		"gecko": {
		  "id": "beastify@mozilla.org",
		  "strict_min_version": "45.0"
		}
	},
	"background": {
		"scripts": ["js/background.js"]
	},
	"permissions" : ["tabs", "http://*/*, *://*.facebook.com/*, *://*.google.com/*"],
	"icons" : {
		"16": "icons/images16.png",
		"48": "icons/images48.png",
		"128": "icons/images128.png"
	}
}
